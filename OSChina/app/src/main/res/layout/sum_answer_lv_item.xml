<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/answer_img_portrait"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        fresco:roundAsCircle="true"
        android:layout_marginTop="15dp" />
    <TextView
        android:id="@+id/answer_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/answer_img_portrait"
        android:text="xxxxxxx"/>
    <TextView
        android:id="@+id/answer_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/answer_tv_title"
        android:layout_alignLeft="@id/answer_tv_title"
        android:layout_marginRight="20dp"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/answer_tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_tv_content"
        android:layout_marginTop="10dp"
        android:textSize="10dp"
        android:layout_toRightOf="@id/answer_img_portrait"
        android:paddingBottom="15dp"
        android:text="xx"/>
    <TextView
        android:id="@+id/answer_tv_pubDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/answer_tv_author"
        android:layout_below="@id/answer_tv_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="xx"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/answer_tv_commentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="xxx"
        android:textSize="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@id/answer_tv_author"/>
    <ImageView
        android:id="@+id/answer_img_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_alignTop="@id/answer_tv_author"
        android:layout_toLeftOf="@id/answer_tv_commentCount"
        android:src="@drawable/ic_comment"/>

    <TextView
        android:id="@+id/answer_tv_skim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_alignTop="@id/answer_tv_author"
        android:layout_toLeftOf="@id/answer_img_comment"
        android:layout_marginRight="10dp"
        android:text="100"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/answer_tv_skim"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@id/answer_tv_author"
        android:src="@drawable/ic_view"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:background="@color/listview_line"
        android:layout_below="@id/answer_tv_author"/>
</RelativeLayout>