<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liang.oschina.ui.activitys.BlogDetailActivity">
    <include layout="@layout/toolbar_layout"></include>
    <WebView
        android:id="@+id/blog_detail_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/listview_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <EditText
            android:id="@+id/blog_detail_judge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:lines="1"
            android:hint="发表评论"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/blog_detail_favor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_fav_normal"/>
        <ImageButton
            android:id="@+id/blog_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_share_black_normal"/>
    </LinearLayout>


</LinearLayout>
